<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/gyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GYROSCOPE"
        />
    <TextView
        android:layout_below="@id/gyro"
        android:layout_alignParentLeft="true"
        android:id="@+id/gyro_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        />
    <TextView
        android:layout_below="@id/gyro"
        android:layout_centerInParent="true"
        android:id="@+id/gyro_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        />
    <TextView
        android:layout_below="@id/gyro"
        android:layout_alignParentRight="true"
        android:id="@+id/gyro_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gyro_x"
        android:id="@+id/acce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCELEROMETER"
        />
    <TextView
        android:layout_below="@id/acce"
        android:id="@+id/acce_x"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        />
    <TextView
        android:layout_below="@id/acce"
        android:layout_centerInParent="true"
        android:id="@+id/acce_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="y"
        />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_below="@id/acce"
        android:id="@+id/acce_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="z"
        />

    <FrameLayout
        android:id="@+id/canvas"
        android:layout_below="@id/acce_z"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        />

</RelativeLayout>
