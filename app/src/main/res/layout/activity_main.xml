<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.inau.ctxph.wswrapper.MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/lat"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:layout_toStartOf="@+id/button"
        android:hint="latitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/lng"
        android:layout_alignBottom="@+id/lat"
        android:layout_toEndOf="@+id/button"
        android:hint="longitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:layout_below="@+id/lat"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/lat"
        android:hint="type" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/values"
        android:layout_below="@+id/lng"
        android:layout_alignStart="@+id/lng"
        android:layout_alignEnd="@+id/lng"
        android:hint="values" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uid"
        android:layout_below="@+id/type"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/type"
        android:hint="uid" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/major"
        android:layout_alignBottom="@+id/uid"
        android:layout_alignEnd="@+id/button"
        android:hint="major"
        android:layout_toEndOf="@+id/type" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minor"
        android:layout_alignBottom="@+id/major"
        android:layout_alignStart="@+id/values"
        android:layout_alignParentEnd="true"
        android:hint="minor" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Context"
        android:id="@+id/postCtx"
        android:layout_below="@+id/uid"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Beacon"
        android:id="@+id/postBeac"
        android:layout_below="@+id/major"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TestPopup"
        android:id="@+id/popupTest"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="72dp" />
</RelativeLayout>
